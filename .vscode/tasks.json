{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$python"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Pipeline Tests",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "pipeline/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$python"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Service Tests",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "services/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$python"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Integration Tests",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$python"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "pytest",
                "--cov=pipeline",
                "--cov=services",
                "--cov-report=html",
                "--cov-report=term",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$python"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start Development Environment",
            "type": "shell",
            "command": "powershell",
            "args": ["-ExecutionPolicy", "Bypass", "-File", ".\\dev-start.ps1"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start Races API Only",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "$env:PYTHONPATH='${workspaceFolder}'; $env:DATA_DIR='../../data/published'; & '${workspaceFolder}\\.venv\\Scripts\\python.exe' main.py"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/services/races-api"
            }
        },
        {
            "label": "Start Web Frontend Only",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/web"
            }
        }
    ]
}
